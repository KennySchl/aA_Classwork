<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="<%= bands_url %>">MusicApp</a>
          <% if current_user.nil? %>
        <div id="navbarText">
        <ul class="navbar-nav">
          <li class="nav-item">
            <button type="button" class="btn btn-outline-light"><a href="<%= new_session_url %>">Sign in</a></button>
          </li>
          <li class="nav-item">
            <button type="button" class="btn btn-outline-light"><a href="<%= new_user_url %>">Sign up</a></button>
          </li>
        </ul>
        </div>
          <% else %>
        <div id="navbarText">
        <ul class="navbar-nav">
          <li class="nav-item" style="color: white">
            <%= current_user.email %>
          </li>
          <li class="nav-item">
            <form action="<%= session_url %>" method="post">
            <%= auth_token %>
            <input type="hidden" name="_method" value="delete">
             <button type="submit" class="btn btn-outline-light" value="Logout">Logout</button>
            </form>
            </li>  
          <% end %>  
          </div>   
      </nav>
    <%= yield %>
  </body>
</html>
